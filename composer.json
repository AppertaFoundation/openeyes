{
  "name": "openeyes/openeyes",
  "license": "AGPL-3.0-only",
  "description": "Electronic Patient Record system for use in Ophthalmology clinics",
  "require": {
    "php": "^7.4 || ^8.0 || ^8.1",
    "ext-json": "^7.4 || ^8.0 || ^8.1",
    "yiisoft/yii": "1.1.28",
    "rlanvin/php-rrule": "2.2.0",
    "endroid/qr-code": "^4.2",
    "setasign/fpdf": "1.8.*",
    "setasign/fpdi": "^2.0",
    "xthiago/pdf-version-converter": "dev-master",
    "phpoffice/phpspreadsheet": "^1.6",
    "phpseclib/mcrypt_compat": "^1.0",
    "ext-dom": "*",
    "ext-libxml": "*",
    "symfony/process": "4.4.*",
    "nesk/rialto": "1.4.*",
    "nesk/puphpeteer": "2.0.*",
    "symfony/polyfill-ctype": "@stable",
    "wikimedia/composer-merge-plugin": "^2.0",
    "onelogin/php-saml": "^3.4",
    "league/oauth2-client": "^2.4",
    "jumbojett/openid-connect-php": "0.9.*",
    "ext-openssl": "*",
    "ext-soap": "*",
    "xenolope/quahog": "2.*"
  },
  "require-dev": {
    "phpunit/phpunit": "9.*",
    "phpunit/php-invoker": "^3.0",
    "pdepend/pdepend": "2.2.4",
    "phpmd/phpmd": "@stable",
    "squizlabs/php_codesniffer": "3.*",
    "friendsofphp/php-cs-fixer": "*",
    "fakerphp/faker": "^1.13",
    "sbs/yii-debug-toolbar": "^1.5",
    "symfony/dom-crawler": "^5.4",
    "symfony/css-selector": "^5.4",
    "guzzlehttp/guzzle": "^7.0",
    "phpstan/phpstan": "^1.9"
  },
  "config": {
    "bin-dir": "bin",
    "allow-plugins": {
      "wikimedia/composer-merge-plugin": true
    }
  },
  "replace": {
    "ezyang/htmlpurifier": "*"
  },
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://packagist.org"
    }
  },
  "autoload": {
    "psr-4": {
      "OE\\concerns\\": "protected/concerns",
      "OE\\factories\\": "protected/factories"
    }
  },
  "autoload-dev": {
    "classmap": [
      "vendor/sbs/yii-debug-toolbar/Yii2Debug.php",
      "features/bootstrap/Pages/OpenEyesPage.php"
    ]
  },
  "extra": {
    "merge-plugin": {
      "include": [
        "protected/modules/*/composer.json"
      ],
      "recurse": true,
      "replace": false,
      "ignore-duplicates": false,
      "merge-dev": true,
      "merge-extra": false,
      "merge-extra-deep": false,
      "merge-scripts": false
    }
  }
}
