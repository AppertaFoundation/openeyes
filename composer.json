{
  "name": "openeyes/openeyes",
  "license": "AGPL-3.0-only",
  "description": "Electronic Patient Record system for use in Ophthalmology clinics",
  "require": {
    "php": "7.4 - 8.0",
    "ext-json": "^7.4",
    "yiisoft/yii": "1.1.25",
    "rlanvin/php-rrule": "2.2.0",
    "endroid/qr-code": "^4.2",
    "setasign/fpdf": "1.8.*",
    "setasign/fpdi": "^2.0",
    "xthiago/pdf-version-converter": "dev-master",
    "phpoffice/phpspreadsheet": "^1.6",
    "phpseclib/mcrypt_compat": "^1.0",
    "ext-dom": "*",
    "ext-libxml": "*",
    "symfony/process": "4.4.*",
    "nesk/rialto": "1.3.*",
    "nesk/puphpeteer": "1.6.*",
    "symfony/polyfill-ctype": "@stable",
    "wikimedia/composer-merge-plugin": "^2.0",
    "onelogin/php-saml": "^3.4",
    "league/oauth2-client": "^2.4",
    "jumbojett/openid-connect-php": "0.9.*",
    "ext-openssl": "*",
    "ext-soap": "*",
    "xenolope/quahog": "2.*"
  },
  "require-dev": {
    "phpunit/phpunit": "7.5.20",
    "phpunit/php-invoker": "3.0.2",
    "phpunit/php-timer": "2.1.2",
    "phpunit/phpunit-story": "*",
    "phploc/phploc": "*",
    "pdepend/pdepend": "2.2.4",
    "phpmd/phpmd": "@stable",
    "squizlabs/php_codesniffer": "3.*",
    "friendsofphp/php-cs-fixer": "*",
    "fakerphp/faker": "^1.13",
    "zhuravljov/yii2-debug": "^1.5"
  },
  "config": {
    "bin-dir": "bin"
  },
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://packagist.org"
    }
  },
  "autoload": {
    "classmap": [
      "features/bootstrap/Pages/OpenEyesPage.php"
    ]
  },
  "autoload-dev": {
    "classmap": [
        "vendor/zhuravljov/yii2-debug/Yii2Debug.php"
    ]
  },
  "extra": {
    "merge-plugin": {
      "include": [
        "protected/modules/*/composer.json"
      ],
      "recurse": true,
      "replace": false,
      "ignore-duplicates": false,
      "merge-dev": true,
      "merge-extra": false,
      "merge-extra-deep": false,
      "merge-scripts": false
    }
  }
}
